{
  "name": "frontend-newsblock",
  "description": "Frontend web for Newsblock",
  "author": "Brad Oyler",
  "private": true,
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "http://github.com/newsblock/frontend.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 app.js",
    "start-dev": "nodemon -e js,json,html,handlebars app.js",
    "test": "mocha test/helpers.js",
    "lint": "eslint --ignore-pattern apps/api/apidoc ."
  },
  "engines": {
    "node": "4.3.2"
  },
  "dependencies": {
    "co": "^4.6.0",
    "co-bcrypt": "^1.0.0",
    "co-child-process": "^0.0.3",
    "co-fs": "^1.2.0",
    "forever": "^0.15.1",
    "koa": "^1.2.0",
    "koa-body": "^1.4.0",
    "koa-cache-lite": "^3.3.3",
    "koa-compose": "^2.4.0",
    "koa-compress": "^1.0.9",
    "koa-handlebars": "^0.5.7",
    "koa-helmet": "^1.0.0",
    "koa-request": "1.0.0",
    "koa-response-time": "^1.0.2",
    "koa-router": "^5.4.0",
    "koa-static": "^2.0.0",
    "moment-timezone": "0.5.3"
  },
  "devDependencies": {
    "eslint": "^2.3.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "npm-check": "^4.1.4",
    "npm-check-updates": "^2.5.8",
    "grunt": "~0.4.5",
    "grunt-autoprefixer": "^2.2.0",
    "grunt-contrib-uglify": "^0.9.2",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-develop": "~0.4.0",
    "grunt-sass": "~1.0.0",
    "load-grunt-tasks": "~1.0.0",
    "time-grunt": "~1.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": false,
      "mocha": false
    },
    "extends": "eslint:recommended",
    "rules": {
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "curly": [
        2,
        "multi-line"
      ],
      "indent": [
        2,
        4,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": [
        1,
        {
          "align": "value"
        }
      ],
      "no-console": 1,
      "no-const-assign": 2,
      "no-redeclare": 1,
      "no-shadow": 1,
      "no-unused-vars": [
        1,
        {
          "vars": "all",
          "args": "after-used"
        }
      ],
      "no-var": 2,
      "object-curly-spacing": [
        2,
        "always"
      ],
      "prefer-const": 2,
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "semi": [
        1,
        "always"
      ],
      "strict": [
        2,
        "global"
      ]
    }
  }
}
